.container
  %h1 
    .pull-right= link_to 'New Occasion', new_occasion_path, class: "btn btn-success"
    Occasions


  - if @occasions.present?
    %ul.list-group
      - @occasions.each do |occasion|
        %li.list-group-item
          %h4
            .pull-right
              = link_to edit_occasion_path(occasion), data: {toggle: "tooltip", title: "Edit Occasion", placement: "bottom", trigger: "hover"}, class: "btn btn-primary btn-sm" do
                %span.glyphicon.glyphicon-pencil
              = link_to occasion_path(occasion), method: :delete, data: {toggle: "tooltip", title: "Delete Occasion...", placement: "bottom", trigger: "hover", confirm: "Are you sure you want to delete this occasion?"}, class: "btn btn-danger btn-sm" do
                %span.glyphicon.glyphicon-trash
            = link_to occasion.name, occasion_invitations_path(occasion)
          %p=occasion.description
  -else
    .well.text-center{style: "background-color:#fff;"}
      %h3 No occasions found.
      =link_to "Add an occasion!", new_occasion_path