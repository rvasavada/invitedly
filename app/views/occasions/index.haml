.row
  .small-12.columns
    = link_to 'New occasion', new_occasion_path, :class=>"button right"
    %h1 
      Occasions
      %small="#{pluralize(@occasions.count, 'occasion')}"

.row
  .small-12.columns
    - if @occasions.present?
      - @occasions.each do |occasion|
      
        =link_to "Actions","#",class: "tiny button dropdown right", "data-dropdown" =>"drop"
        %ul.f-dropdown#drop{"data-dropdown-content" => true}
          %li= link_to "Edit occasion", edit_occasion_path(occasion)
          %li.divider
          %li= link_to "Delete occasion", occasion, method: :delete,  remote: true, 'data-type' => 'json', data: {confirm: 'Are you sure you want to delete this occasion?'}
      
      
        %h5=link_to occasion.name, occasion
        %p= occasion.description
        %hr
    -else 
      %p.text-center
        You have no occasions.
        =link_to "Add an occasion!", new_occasion_path

    = render "layouts/modal"
