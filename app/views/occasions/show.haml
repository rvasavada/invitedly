.row
  .col-xs-3
    .list-group
      =link_to @occasion.name, @occasion, class:"list-group-item active", style: "font-weight:bold;"
      =link_to occasion_events_path(@occasion), class:"list-group-item" do
        Events
        %span.badge=@occasion.events.count
