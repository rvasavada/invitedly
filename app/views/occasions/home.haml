.jumbotron
  %h1=@occasion.name
  %p#description=@occasion.description

  = form_tag occasion_rsvp_verify_email_address_path(@occasion) do
    .row
      .col-md-6
        .input-group
          = text_field_tag :email,nil, :placeholder => "Email Address", class: "form-control input-lg"
          %span.input-group-btn
            =submit_tag "RSVP", class: "btn btn-danger btn-lg", role: "button"