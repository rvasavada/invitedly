!!!
%html{lang: "en"}    
  %head
    %title Invitedly
    %link{href: "http://fonts.googleapis.com/css?family=Pacifico", rel: "stylesheet", type: "text/css"}
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %link{:href=>"//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css", :rel=>"stylesheet"}
    = stylesheet_link_tag "application", media: "all"
    
    = csrf_meta_tags
    =favicon_link_tag "/assets/favicon.ico"
    %body
      .row
        .small-12.columns
          %h1#logo Invitedly
          
          %ul.list-inline.pull-right{style: "margin-top:32px;"}
            - if user_signed_in?              
              %li= link_to "Address Book", address_book_path, class: "signout-link"
              %li= link_to "Occasions", occasions_path, class: "signout-link"
              %li= link_to "Settings", edit_user_registration_path, class: "signout-link"
              %li= link_to "Sign out", destroy_user_session_path, method: :delete, class: "signout-link"
            -else
              %li= link_to "Sign in",new_user_session_path, class: "signout-link"
              %li.has-form= link_to "Sign up", new_user_registration_path, class: "signout-link"
            

      - if notice.present?
        .row
          .small-12.columns
            .alert.alert-success.alert-dismissable
              %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", type: "button"} ×
              = notice.html_safe
      - if alert.present?
        .row
          .small-12.columns
            .alert.alert-danger.alert-dismissable
              %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", type: "button"} ×
              = alert.html_safe

      .row
        .small-12.columns
          = yield
      .row
        .columns.small-12.bottom
          %footer#footer
            %ul.list-inline.pull-right
              %li= link_to "About", about_path
              %li= link_to "Privacy", privacy_path
              %li= link_to "Terms", terms_path
              %li Invitedly © 2014

      = javascript_include_tag "application"
      %script{:src=>"//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"}            
      