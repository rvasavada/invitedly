.container
  .alert.alert-info
    %span.text-muted Wedding Information
    >
    %strong Event Information


  = form_for @occasion, :url => wizard_path, :method => :put, :html => { :role => "form"} do |f|
    .panel.panel-default
      .panel-body
        %legend
          Event Information
        #events  
          = f.fields_for :events do |event|
            = render 'event_fields', :f => event
          .links
            = link_to_add_association 'Add Event', f, :events, :class => "btn btn-link"
        
    .pull-right
      .form-group
        = f.submit "Save & Add more", :class => "btn btn-success btn-lg"
        = f.submit "Save & Finish", :class => "btn btn-success btn-lg"
    = link_to 'Cancel', :back, :class=> "btn btn-default btn-lg"
  