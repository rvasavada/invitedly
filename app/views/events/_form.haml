= form_for [@occasion,@event], :html => { :role => "form"} do |f|
  %fieldset
    %h3 Event Information
    .form-group{class: @event.errors.include?(:name) ? 'has-error' : ''}
      = f.label :name, class: "control-label" do
        Event Title
        %span{style: "color:red"}*
      = f.text_field :name, :autofocus => true, :maxlength => 50, class: "form-control input-sm"
      %span.help-block= @event.errors.get(:name).join('; ')
    .row
      .col-xs-6
        .form-group{class: @event.errors.include?(:start_date) ? 'has-error' : ''}
          = f.label :start_date, class: "control-label" do
            Event Date
            %span{style: "color:red"}*
          = f.text_field :start_date, :value => @event.start_date.blank? ? nil : @event.start_date.strftime("%b %e, %Y"), class: "input-sm form-control datepicker"
          %span.help-block= @event.errors.get(:start_date).join('; ')
      .col-xs-6
        .form-group{class: @event.errors.include?(:start_time) ? 'has-error' : ''}
          = f.label :start_time, class: "control-label" do
            Event Time
            %span{style: "color:red"}*
          = f.text_field :start_time, :id => "spinner", :class => "form-control input-sm"
          %span.help-block= @event.errors.get(:start_time).join('; ')
    .form-group{class: @event.errors.include?(:description) ? 'has-error' : ''}
      = f.label :description, class: "control-label" do
        Description
        %span{style: "color:red"}*
      = f.text_area :description, :rows => 3, :maxlength => 250, :class => "form-control input-sm"
      %span.help-block= @event.errors.get(:description).join('; ')

  %fieldset
    %h3 Venue Information
    .form-group{class: @event.errors.include?(:location) ? 'has-error' : ''}
      = f.label :location, class: "control-label" do
        Location Name
        %span{style: "color:red"}*
      = f.text_field :location, :rows => 3, :maxlength => 100, class: "form-control input-sm"
      %span.help-block= @event.errors.get(:location).join('; ')
    .row
      .col-xs-7
        .form-group
          = f.label :address_1, "Address 1"
          = f.text_field :address_1, :maxlength => 100, class: "form-control input-sm"
      .col-xs-5
        .form-group
          = f.label :address_2, "Address 2"
          = f.text_field :address_2, :maxlength => 100, class: "form-control input-sm"
    .row
      .col-xs-5
        .form-group      
          = f.label :city, "City"
          = f.text_field :city, :maxlength => 100, class: "form-control input-sm"
      .col-xs-4.domestic
        .form-group
          = f.label :state, "State"
          = f.collection_select :state,	@state, :name, :name, {prompt: "Please select..."}, {class: "form-control input-sm"} 
      .domestic.col-xs-3
        .form-group
          = f.label :zip, "Zip"
          = f.text_field :zip, :maxlength => 5, class: "form-control input-sm"
      .international.col-xs-4
        .form-group
          = f.label :region, "Region"
          = f.text_field :region, :maxlength => 100, class: "form-control input-sm"
      .international.col-xs-3
        .form-group
          = f.label :postal_code, "Postal Code"
          = f.text_field :postal_code, :maxlength => 20, class: "form-control input-sm"
    .form-group
      = f.label :country, "Country"
      = f.collection_select(:country,	@country, :name, :name, {:selected => current_user.country.blank? ? "United States" : current_user.country}, {class: "form-control input-sm",:id => "countrySelect"})

  .pull-right
    = f.submit "Save & Add more", :class => "btn btn-primary"
    = f.submit "Save & Finish", :class => "btn btn-success"
  = link_to 'Cancel', :back, :class=> "btn btn-default"
