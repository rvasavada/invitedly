.content-full
  .content-nav
    %ol.breadcrumb
      %li=link_to @occasion.name, @occasion
      %li=link_to @event.name, [@occasion,@event]
      %li.active Recent Activity

  .content-header
    %h1 Recent Activity
  .content-body

    .row
      .col-xs-3
        .list-group
          =link_to "Recent Activity", [@occasion,@event], class:"list-group-item active"
          =link_to occasion_event_rsvps_path(@occasion,@event), class:"list-group-item" do
            Guests
            %span.badge=@event.rsvps.count

        .btn-group-vertical.btn-block
          = link_to 'Invite more guests', new_occasion_invitation_path(@occasion),class: "btn btn-primary"
      .col-xs-9
        .well.text-center
          %h3 No updates just yet. 
          
= render "layouts/modal"
