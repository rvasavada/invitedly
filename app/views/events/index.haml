.content-full
  .row
    .small-12.columns
      .pull-right
        = link_to 'Invite more guests', new_occasion_invitation_path(@occasion), :class => "btn btn-primary form-btn"
        = link_to 'Add events', new_occasion_event_path(@occasion), :class => "btn btn-primary form-btn"
      %h1
        =@occasion.name
      .row
        .columns.medium-3
          .list-group
            =link_to "Updates", @occasion, class: "list-group-item"
            =link_to "Events", occasion_events_path(@occasion), class: "list-group-item active"
            =link_to "Invitations", occasion_invitations_path(@occasion), class: "list-group-item"
            
        .columns.medium-9

          - if @events.present?
            - @events.each_with_index do |event,index|
              .row
                .small-12.columns
                  .btn-group.pull-right
                    = link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_occasion_event_path(@occasion,event),class: "btn btn-link btn-lg info-btn", data: {container: 'body', content: "edit this event", trigger: "hover", toggle: "popover"}
                    = link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, occasion_event_path(@occasion, event), method: :delete, data: {confirm: 'Are you sure you want to delete this event?'},class: "btn btn-link btn-lg info-btn", data: {container: 'body', content: "delete this event", trigger: "hover", toggle: "popover"}

                  %h3
                    %strong= link_to event.name, occasion_event_path(@occasion,event)
                  %p.subheader= event.description
                  -if (index+1) != @events.count
                    %hr
          -else
            .row
              .small-12.columns
                %p.text-center
                  You have no events.
                  =link_to "Add an event!", new_occasion_event_path(@occasion)