.content-full
  .content-nav
    %ol.breadcrumb
      %li=link_to @occasion.name, @occasion
      %li.active Events
      
  .content-header
    %h1 Events
  .content-body
      
    .row
      .col-xs-3
        = link_to 'Add more events', new_occasion_event_path(@occasion),class: "btn btn-primary btn-block"
        %br
        .list-group
          =link_to "Recent Activity", occasion_events_path(@occasion), class:"list-group-item"
          =link_to occasion_events_path(@occasion), class:"list-group-item active" do
            Events
            %span.badge=@events.count
          =link_to occasion_invitations_path(@occasion), class:"list-group-item" do
            Invitations
            %span.badge=@occasion.invitations.count
        
      .col-xs-9
      
        - if @events.present?
          .list-group
            - @events.each do |event|
              =link_to occasion_event_path(@occasion,event), class: "list-group-item" do
                %h4.list-group-item-heading= event.name
                %p.list-group-item-text=event.description



        -else
          .well.text-center
            %h3 No events found.
            =link_to "Add an event!", new_occasion_event_path(@occasion), :class => "btn btn-link"