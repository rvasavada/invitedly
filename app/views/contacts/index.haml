.row
  .col-xs-3
    .list-group
      =link_to "Address Book", address_book_path, class:"list-group-item active"
      =link_to "Occasions", occasions_path, class:"list-group-item"
      =link_to "Account Information", edit_user_registration_path, class:"list-group-item" 
    = link_to 'Add contacts', new_contact_path, class: "btn btn-primary btn-success"
    -#=link_to "Add contacts", user_omniauth_authorize_path(:facebook), data: {:toggle=> "modal", :target=>"#myModal"}, class: "btn btn-block btn-success"
  .col-xs-9
    
    .panel.panel-default
      .panel-heading
        %h3.panel-title.panel-page-title Address Book
        
      - if @contacts.present?
        .list-group      
          - @contacts.each do |contact|
            .list-group-item
              %ul.pull-right.list-inline
                %li= link_to "Edit", edit_contact_path(contact)
                %li= link_to "Delete", contact, method: :delete, data: {confirm: 'Are you sure you want to delete this contact?'}
              %h4.list-group-item-heading
                
                =contact.contact_name
                %small=contact.guest_names


              %p.list-group-item-text
        
                - if contact.notes.present?
                  %span.text-muted="#{contact.notes}"
                -if contact.address_1.present?
                  %br
                  ="#{contact.address_1} #{contact.address_2}"
                -if ((contact.city.present? and contact.state.present?) and (contact.country == 'United States'))
                  %br
                  ="#{contact.city}, #{contact.state} #{contact.zip}" 
                -if ((contact.city.present? and contact.region.present?) and (contact.country != 'United States'))
                  %br
                  ="#{contact.city}, #{contact.region} #{contact.postal_code}"
                -if contact.country != 'United States'
                  %br
                  = contact.country
                -if contact.email.present? or contact.home_phone.present? or contact.cell_phone.present?
                  %br
                -if contact.email.present?
                  %abbr{title:'Email'}E:
                  = link_to contact.email, "mailto:#{contact.email}"
                -if contact.home_phone.present?
                  %abbr{title:'Home'}H:
                  = contact.home_phone
                -if contact.cell_phone.present?
                  %abbr{title:'Mobile'}M:
                  = contact.cell_phone

      -else
        .panel-body
          .text-center
            %h3 You have no contacts.
            = link_to "Add contacts now!", new_contact_path
    
-#.modal.fade#myModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
        %h3.modal-title Add contacts
      .modal-body
        %p
          You can add contacts in one of two ways:
          .row
            .col-xs-6
              = link_to "Import from Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary btn-block"
            .col-xs-6
              = link_to 'Manually add contacts', new_contact_path, class: "btn btn-primary btn-block"