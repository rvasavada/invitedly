.nested-fields
  .row
    .col-sm-2
      .form-group
        = f.label :title, class: "sr-only"
        = f.collection_select(:title,	@title, :name, :name, {:prompt => "Select"}, {class: "form-control"})
    .col-sm-3
      .form-group
        = f.label :first_name, class: "sr-only"
        = f.text_field :first_name, class: "form-control", placeholder: "First Name"
    .col-sm-4
      .form-group
        = f.label :last_name, class: "sr-only"
        = f.text_field :last_name, class: "form-control", placeholder: "Last Name"
    .col-sm-2
      .form-group
        = link_to_remove_association f, :class => "btn btn-link", data: {toggle: "tooltip", title: "Delete Guest", placement: "bottom"} do
          %span.glyphicon.glyphicon-trash