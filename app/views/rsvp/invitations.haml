!!!
%html{lang: "en"}
  %head
    %title 
      =@occasion.name
      @ Invitedly
    %link{href: "http://fonts.googleapis.com/css?family=Pacifico", rel: "stylesheet", type: "text/css"}
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
    =favicon_link_tag "/assets/favicon.ico"
    %body{style: "background: url('/assets/HR-01_0286.jpg') no-repeat center center fixed;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;"}
      - if notice.present?
        .alert-box{"data-alert" => true}
          =notice
          =link_to "&times;".html_safe, "#", class: "close"
      - if alert.present?
        .warning.alert-box{"data-alert" => true}
          =alert
          =link_to "&times;".html_safe, "#", class: "close"
      .row
        .small-12.columns.medium-6
          %ul.inline-list
            %li{style:"color: #CCC;text-shadow: #000 0px 0px 7px;"} 1. Guest info
            %li
              %strong{style:"color: #F0F8FF;text-shadow: #000 0px 0px 7px;"} 2. RSVP
            %li{style:"color: #CCC;text-shadow: #000 0px 0px 7px;"} 3. Confirmation
          
          %h1{style:"color: #F0F8FF;text-shadow: #000 0px 0px 7px;"} 
            %strong Invitations
          
          %p{style:"color: #F0F8FF;text-shadow: #000 0px 0px 7px;"} Please enter your responses, number of guests attending each event and add any notes or comments for the host.


          = form_for @contact, :url => wizard_path, :method => :put, :html => {:role =>"form"} do |f|
            = f.hidden_field :id
  
            = f.fields_for :invitations do |invitation|
              .panel
                = invitation.hidden_field :id
              
                %h5
                  %strong= Event.find_by_id(invitation.object.event_id).name
                  = invitation.hidden_field :event_id
                .row
                  .columns.medium-4
                    = invitation.label :response
                    = invitation.collection_select(:response,	@response, :name, :name)
                  .columns.medium-3
                    = invitation.label :num_guests, "Total Guests"
                    = invitation.select(:num_guests, options_for_select((1..@contact.max_guests).to_a,{:selected => @contact.max_guests}))
                  .columns.medium-5
                = invitation.label :message, "Message"
                = invitation.text_area :message, maxlength: 300, rows:3
            = f.submit "Save", :class => "button"
            = link_to "Skip", next_wizard_path(code: params[:code]), :class => "secondary button"
    = javascript_include_tag "application"