.container
  .panel.panel-warning
    .panel-heading
      = link_to "Guest Information", occasion_invitation_rsvp_path(@occasion, @invitation,:guest_info), class:"text-primary"
      >
      = link_to "Events", occasion_invitation_rsvp_path(@occasion, @invitation,:events), class: "text-primary", style: "font-weight: bold;"
      >
      = link_to "Guestbook", occasion_invitation_rsvp_path(@occasion, @invitation,:guestbook), class: "text-primary"
      >
      = link_to "Confirmation", occasion_invitation_rsvp_path(@occasion, @invitation,:confirmation), class: "text-primary"

  %h1 Events

  = form_for [@occasion,@invitation], :url => wizard_path, :method => :put, :html => {:role =>"form"} do |f|
    .panel.panel-default
      .panel-body
        %h2 Now, confirm your RSVP.
      %ul.list-group
        %li.list-group-item      
          - @events.each_with_index do |event,index|
            - if @invitation.rsvps.where(:event_id => event.id, :visibility => true).count > 0
              .row
                .col-lg-6
                  %h3{style:"margin-top:0px;margin-bottom:0px;"}=event.name
                  %p.text-muted{style:"margin-top:0px;"}
                    = "#{event.start_date.strftime('%A, %B %e, %Y')} at #{event.start_time.strftime('%l:%M%P')}"
                    %br
                    - unless event.address_1.blank?
                      = link_to event.location, "https://www.google.com/maps/preview#!q=#{event.address}"
                      = "| #{event.address}"
                    - else
                      = event.location
                  %p=event.description
                .col-lg-6
                  %table.table
                    %thead
                      %tr
                        %th{style:"width:50%"} Guest name
                        %th Response
                        %th
                      %tbody
                        = f.fields_for :rsvps, @invitation.rsvps.where(:event_id => event.id, :visibility => true).guest_view do |rsvp|
                          %tr
                            %td
                              - if rsvp.object.guest.first_name != "" && rsvp.object.guest.last_name != ""
                                = rsvp.object.guest.full_name
                              - else 
                                %em.text-muted Additional guest not needed
                                = rsvp.hidden_field :response, value: "Not Attending"
                            - if (rsvp.object.guest.first_name != "" && rsvp.object.guest.last_name != "")
                              %td
                                %label.radio-inline 
                                  = rsvp.radio_button :response, "Attending"
                                  Attending
                              %td
                                %label.radio-inline
                                  = rsvp.radio_button :response, "Not Attending"
                                  Not Attending
                            - else
                              %td
                                %label.radio-inline 
                                  = rsvp.radio_button :response, "Attending", disabled: true
                                  Attending
                              %td
                                %label.radio-inline
                                  = rsvp.radio_button :response, "Not Attending", checked: true, disabled: true
                                  Not Attending
                            
                        
    .form-group.pull-right
      = f.submit "Next", :class => "btn btn-success btn-lg"
    .form-group
      = link_to 'Previous', previous_wizard_path, :class=> "btn btn-default btn-lg"