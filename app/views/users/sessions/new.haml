.container
  .row
    .col-sm-offset-3.col-sm-6
      %h1.text-center
        Invitedly
        %br
        %small Let us manage your guestlist.
     
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .ul.list-group
          .li.list-group-item
            %h3 Sign into your account
          .li.list-group-item
            %p.text-danger
              = alert
            %fieldset
              .form-group
                = f.label :email, "Email", class: "control-label"
                = f.text_field :email, :autofocus => true, class: "form-control"
              .form-group
                = f.label :password, "Password", class: "control-label"
                = f.password_field :password, class: "form-control" 

              .form-group
                .checkbox
                  = f.label :remember_me do
                    = f.check_box :remember_me, :checked => true
                    Remember me
                  

              = f.submit "Sign in", :class=> "btn btn-success btn-block"

      %p.text-center
        Don't have an account?
        = link_to "Sign up!", new_registration_path(resource_name), :class=> "btn btn-primary"
        or
        = link_to "Forgot password?", new_password_path(resource_name), class: "btn btn-default"
      