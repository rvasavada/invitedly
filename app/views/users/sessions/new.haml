.row
  .small-10.small-offset-1.columns.medium-6.medium-offset-3
    %h2 Invitedly
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      
      %fieldset 
        %legend Sign into your account
        = f.label :email, "Email"
        = f.text_field :email, :autofocus => true

        = f.label :password, "Password"
        = f.password_field :password
  
        - if devise_mapping.rememberable?
          = f.check_box :remember_me, :checked => true
          = f.label :remember_me, "Remember me"
      
        = f.submit "Sign in", :class=> "button", style: "width:100%;"
        = link_to "Forgot password?", new_password_path(resource_name)
    = link_to "Don't have an account? <strong>Sign up</strong>.".html_safe, new_registration_path(resource_name), :class => "button secondary", style: "width:100%;"