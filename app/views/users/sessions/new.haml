.row
  .small-10.small-offset-1.columns.medium-6.medium-offset-3
    %h1 Invitedly
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .panel.panel-default 
        .panel-heading
          %h3.panel-title Sign into your account
        .panel-body  
          = f.label :email, "Email"
          = f.text_field :email, :autofocus => true

          = f.label :password, "Password"
          = f.password_field :password
  
          - if devise_mapping.rememberable?
            = f.check_box :remember_me, :checked => true
            = f.label :remember_me, "Remember me"
          = link_to "Forgot password?", new_password_path(resource_name), :class => "btn btn-link"
          
          = f.submit "Sign in", :class=> "btn btn-primary btn-block"
      = link_to "Don't have an account? <strong>Sign up</strong>.".html_safe, new_registration_path(resource_name), :class=> "btn btn-default btn-block"
      
      