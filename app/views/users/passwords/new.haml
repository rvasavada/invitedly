%h1.form-h1 Reset your password

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|

  .row
    .col-md-4
      %div{class: "form-group #{resource.errors.include?(:email) ? 'has-error' : ''}"}
        = f.label :email, "Email", :class => "control-label"
        = f.text_field :email, :autofocus => true, class: "form-control", :autocomplete => :off
        %span.help-block= resource.errors.get(:email).join('; ')
  = f.submit "Send reset password email", :class=> "btn btn-primary"
  %span.text-muted{style: "padding-left:12px;font-size:17px;"} or
  = link_to "Sign in".html_safe, new_session_path(resource_name), :class => "btn btn-link"